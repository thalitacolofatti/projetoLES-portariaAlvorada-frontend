{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2023,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],      
    "quotes": ["error", "single"],    
    "indent": ["error", 2],                        
    "no-unused-vars": "error",
    "arrow-parens": ["error", "always"],
    "arrow-spacing": "error",
    "no-var": "error", 
    "prefer-const": "error"
  }
}
